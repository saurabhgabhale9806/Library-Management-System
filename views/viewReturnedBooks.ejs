<!DOCTYPE html>
<html lang="en">

<!-- ...existing code... -->

<head>
    <meta charset="UTF-8" />
    <title>Issued Book Records</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"> <!-- ADD THIS LINE -->
    <link rel="stylesheet" href="/admindashboard.css" />
    <link rel="stylesheet" href="/viewIssueBooks.css" />
</head>
<!-- ...existing code... -->

<body>
    <!-- Include Header -->
    <%- include('partials/header') %>

        <div class="layout">
            <!-- Include Sidebar -->
            <%- include('partials/sidebar') %>
                <!-- ...existing code... -->
                <div class="container">
                    <div class="header">
                        <h2>Issued Book Records</h2>
                        <div class="search-box">
                            <input type="text" placeholder="🔍 Search" />
                        </div>
                    </div>

                    <div class="table-scroll"><!-- ADD THIS DIV -->
                        <table>
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Book Name</th>
                                    <th>Issued By</th>
                                    <th>Issue Date</th>
                                    <th>Return Date</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody id="tbody">
                                <% if (data.length===0) { %>
                                    <tr>
                                        <td colspan="8">No data available</td>
                                    </tr>
                                    <% } else { data.forEach((item, index)=> { %>
                                        <tr>
                                            <td data-label="ID">
                                                <%= index + 1 %>
                                            </td>
                                            <td data-label="Book ID">
                                                <%= item.title %>
                                            </td>
                                            <td data-label="Issued By">
                                                <%= item.name %>
                                            </td>
                                            <td data-label="Issue Date">
                                                <%= item.issue_date.toLocaleDateString() %>
                                            </td>
                                            <td data-label="Return Date">
                                                <%= item.return_date.toLocaleDateString() %>
                                            </td>
                                            <td data-label="Status">
                                                <span
                                                    class="status <%= item.status === 'returned' ? 'returned' : 'active' %>">
                                                    <%= item.status %>
                                                </span>
                                            </td>
                                        </tr>
                                        <% }) } %>
                            </tbody>
                        </table>
                    </div><!-- END .table-scroll -->
                </div>
                <!-- ...existing code... -->
        </div>

        <script src="/dashboard.js"></script>
</body>

</html>