<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>View Books</title>
  <link rel="stylesheet" href="viewBooks.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>

<body>

  <div class="search-bar">
    <input type="text" class="search-box" placeholder="üîç Search Book" onkeyup="searchSBooks(this.value)">
  </div>

  <div id="bookContainer" class="book-container">
    <% if (books && books.length > 0) { %>
      <% books.forEach((book, index) => { %>
        <div class="book-card book-item" data-index="<%= index %>">
          <img src="<%= book.image %>" alt="Book Image" />
          <div class="book-title"><%= book.title %></div>
          <div class="book-description">
            <strong>Author:</strong> <%= book.author %><br />
            <strong>Publisher:</strong> <%= book.publisher %><br />
            <strong>ISBN:</strong> <%= book.isbn %><br />
            <strong>Category:</strong> <%= book.category %><br />
            <strong>Total Copies:</strong> <%= book.total_copies %><br />
            <strong>Available:</strong> <%= book.available_copies %><br />
            <strong>Status:</strong> <%= book.status %>
          </div>
          <button><a href="/deleteBook?id=<%= book.id %>">Delete</a></button>
          <button><a href="/beforeUpdateBook?id=<%= book.id %>">Update</a></button>
        </div>
      <% }); %>
    <% } else { %>
      <p style="text-align:center;">No books available.</p>
    <% } %>
  </div>

  <div class="pagination-controls">
    <button id="prevPage" onclick="changePage(-1)">‚üµ Previous</button>
    <span id="pageInfo"></span>
    <button id="nextPage" onclick="changePage(1)">Next ‚ü∂</button>
  </div>

  <script src="/paginationViewBook.js"></script>

</body>
</html>
