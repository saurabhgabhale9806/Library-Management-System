<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>View Books</title>

  <link rel="stylesheet" href="/admindashboard.css" />
  <link rel="stylesheet" href="/viewBooks.css" />
</head>

<body>
  <!-- Include Header -->
  <%- include('partials/header') %>

    <div class="layout">
      <!-- Include Sidebar -->
      <%- include('partials/sidebar') %>

        <!-- Main Content -->
        <div class="main-content">
          <!-- Search -->
          <div class="search-bar">
            <input type="text" class="search-box" placeholder="üîç Search Book" onkeyup="searchSBooks(this.value)" />
          </div>

          <!-- Book Cards -->
          <div id="bookContainer" class="book-container">
            <% if (books && books.length> 0) { %> <% books.forEach((book, index)=> { %>
                <div class="book-card book-item" data-index="<%= index %>">
                  <!-- ‚úÖ Fixed image path -->
                  <img src="<%= book.image.startsWith('/uploads/') ? book.image : '/uploads/' + book.image %>"
                    alt="Book Image" width="100" />

                  <div class="book-title">
                    <%= book.title %>
                  </div>
                  <div class="book-description">
                    <strong>Author:</strong>
                    <%= book.author %><br />
                      <strong>Publisher:</strong>
                      <%= book.publisher %><br />
                        <strong>ISBN:</strong>
                        <%= book.isbn %><br />
                          <strong>Category:</strong>
                          <%= book.category %><br />
                            <strong>Total Copies:</strong>
                            <%= book.total_copies %><br />
                              <strong>Available:</strong>
                              <%= book.available_copies %><br />
                                <strong>Status:</strong>
                                <%= book.status %>
                  </div>

                  <!-- Buttons -->
                  <div class="button-group">
                    <button>
                      <a href="/deleteBook?id=<%= book.id %>">Delete</a>
                    </button>
                    <button>
                      <a href="/beforeUpdateBook?id=<%= book.id %>">Update</a>
                    </button>
                  </div>
                </div>
                <% }); %>
                  <% } else { %>
                    <p style="text-align: center">No books available.</p>
                    <% } %>
          </div>

          <!-- Pagination Controls -->
          <div class="pagination-controls">
            <button id="prevPage" onclick="changePage(-1)">‚üµ Previous</button>
            <span id="pageInfo"></span>
            <button id="nextPage" onclick="changePage(1)">Next ‚ü∂</button>
          </div>
        </div>
    </div>

    <!-- JS Files -->
    <script src="/paginationViewBook.js"></script>
    <script src="/dashboard.js"></script>
</body>

</html>