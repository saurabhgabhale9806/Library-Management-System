<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Categories Records</title>
  <link rel="stylesheet" href="/admindashboard.css" />
  <link rel="stylesheet" href="/viewCategories.css" />
</head>

<body>
  <!-- Header -->
  <%- include('partials/header') %>

  <div class="layout">
    <!-- Sidebar -->
    <%- include('partials/sidebar') %>

    <!-- Main Content -->
    <main class="main-content">
      <div class="container">
        <div class="search">
          <h2>Categories Records</h2>
          <input type="text" name="search" placeholder="🔍 Search" onkeyup="searchCategories(this.value)">
        </div>

        <!-- Responsive Table Wrapper -->
        <div class="table-responsive">
          <table>
            <thead>
              <tr>
                <th>SRNO.</th>
                <th>Name</th>
                <th>Delete</th>
                <th>Update</th>
              </tr>
            </thead>
            <tbody id="tableBody">
              <% if(data.length === 0) { %>
                <tr>
                  <td colspan="4"><center><h3>No Data Available 😓...!!</h3></center></td>
                </tr>
              <% } else { %>
                <% data.forEach((item, index) => { %>
                  <tr class="category-row">
                    <td data-label="SRNO."><%= index + 1 %></td>
                    <td data-label="Name"><%= item.name %></td>
                    <td data-label="Delete">
                      <a href="/deleteCategory?id=<%= item.id %>" 
                         class="btn delete" 
                         onclick="return confirm('Are you sure you want to delete this record?');">
                         DELETE
                      </a>
                    </td>
                    <td data-label="Update">
                      <a href="/beforeUpdateCat?id=<%= item.id %>" class="btn update">UPDATE</a>
                    </td>
                  </tr>
                <% }); %>
              <% } %>
            </tbody>
          </table>
        </div>

        <!-- Pagination Controls -->
        <div class="pagination">
          <button id="prevPage" onclick="changePage(-1)">Previous</button>
          <span id="pageInfo">Page 1</span>
          <button id="nextPage" onclick="changePage(1)">Next</button>
        </div>
      </div>
    </main>
  </div>

  <!-- Scripts -->
  <script src="/categoryPagination.js"></script>
  <script src="/searchCategories.js"></script>
  <script src="/dashboard.js"></script>
</body>

</html>