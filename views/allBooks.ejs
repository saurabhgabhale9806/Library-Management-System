<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>View Books</title>

  <link rel="stylesheet" href="/admindashboard.css" />
  <link rel="stylesheet" href="/viewBooks.css" />
</head>

<body>
    <div class="layout"

        <!-- Main Area -->
        <div class="main-content">

          <!-- Header -->

          <!-- Scrollable Area -->
          <div class="main-scroll-area">

            <!-- Search -->
            <div class="search-bar">
              <h2>Book Records</h2>
              <input type="text" class="search-box" placeholder="üîç Search Book" onkeyup="searchSBooks(this.value)" />
              <button><a href="/">‚¨Ö Back to Home</a></button>
            </div>

            <!-- Book Cards -->
            <div id="bookContainer" class="book-container">
              <% if (books && books.length> 0) { %>
                <% books.forEach((book, index)=> { %>
                  <div class="book-card book-item" data-index="<%= index %>">
                    <img src="<%= book.image.startsWith('/uploads/') ? book.image : '/uploads/' + book.image %>"
                      alt="Book Image" />

                    <div class="book-title">
                      <%= book.title %>
                    </div>

                    <div class="book-description">
                      <strong>Author:</strong>
                      <%= book.author %><br />
                        <strong>Publisher:</strong>
                        <%= book.publisher %><br />
                          <strong>ISBN:</strong>
                          <%= book.isbn %><br />
                            <strong>Category:</strong>
                            <%= book.category %><br />
                              <strong>Total Copies:</strong>
                              <%= book.total_copies %><br />
                                <strong>Available:</strong>
                                <%= book.available_copies %><br />
                                  <strong>Status:</strong>
                                  <%= book.status %>
                    </div>
<!-- 
                    <div class="button-group">
                      <a href="/deleteBook?id=<%= book.id %>" class="button button-delete">Delete</a>
                      <a href="/beforeUpdateBook?id=<%= book.id %>" class="button button-update">Update</a>
                    </div> -->

                  </div>
                  <% }); %>
                    <% } else { %>
                      <p style="text-align: center">No books available.</p>
                      <% } %>
            </div>

            <!-- Pagination -->
            <!-- <div class="pagination-controls">
              <button id="prevPage" onclick="changePage(-1)">‚üµ Previous</button>
              <span id="pageInfo"></span>
              <button id="nextPage" onclick="changePage(1)">Next ‚ü∂</button>
            </div> -->

          </div> <!-- end of main-scroll-area -->
        </div> <!-- end of main-content -->
    </div> <!-- end of layout -->

    <!-- Scripts -->
    <!-- <script src="/paginationViewBook.js"></script> -->
    <script src="/dashboard.js"></script>
</body>

</html>