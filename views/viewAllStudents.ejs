<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Student Records</title>
  <link rel="stylesheet" href="/admindashboard.css" />
  <link rel="stylesheet" href="/viewAllStudents.css" />
</head>
<body>
  <%- include('partials/header') %>

  <div class="layout">
    <%- include('partials/sidebar') %>

    <main class="main-content">
      <div class="container">
        <div class="search">
          <h2>Student Records</h2>
          <input type="text" name="search" placeholder="ðŸ” Search" onkeyup="searchStudents(this.value)">
        </div>

        <div class="table-wrapper">
          <table>
            <thead>
              <tr>
                <th>SRNO.</th>
                <th>Name</th>
                <th>Email</th>
                <th>Password</th>
                <th>Role</th>
                <th>Date</th>
                <th>Delete</th>
                <th>Update</th>
              </tr>
            </thead>
            <tbody id="tableBody">
              <% if (data.length === 0) { %>
                <tr>
                  <td colspan="8">
                    <center><h3>No Data Available ðŸ˜“...!!</h3></center>
                  </td>
                </tr>
              <% } else { %>
                <% data.forEach((item, index) => { %>
                  <tr class="student-row">
                    <td data-label="SRNO."><%= index + 1 %></td>
                    <td data-label="Name"><%= item.name %></td>
                    <td data-label="Email"><%= item.email %></td>
                    <td data-label="Password">â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢</td>
                    <td data-label="Role"><%= item.role %></td>
                    <td data-label="Date"><%= item.created_at.toLocaleString() %></td>
                    <td data-label="Delete">
                      <a href="/deleteStudent?id=<%= item.id %>" class="btn delete" onclick="return confirm('Are you sure you want to delete this record?');">DELETE</a>
                    </td>
                    <td data-label="Update">
                      <a href="/update?id=<%= item.id %>" class="btn update">UPDATE</a>
                    </td>
                  </tr>
                <% }); %>
              <% } %>
            </tbody>
          </table>
        </div>

        <!-- Pagination Controls -->
        <div class="pagination">
          <button id="prevPage" onclick="changePage(-1)">Previous</button>
          <span id="pageInfo">Page 1</span>
          <button id="nextPage" onclick="changePage(1)">Next</button>
        </div>
      </div>
    </main>
  </div>

  <script src="/searchStudent.js"></script>
  <script src="/dashboard.js"></script>
  <script src="/studentPagination.js"></script>
  <script src="/toggleSidebar.js"></script>
</body>
</html>