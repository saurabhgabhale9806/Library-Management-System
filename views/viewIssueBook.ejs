<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <title>Issued Book Records</title>
    <link rel="stylesheet" href="/admindashboard.css" />
    <link rel="stylesheet" href="/viewIssueBooks.css" />
</head>

<body>
    <!-- Include Header -->
    <%- include('partials/header') %>

    <div class="layout">
        <!-- Include Sidebar -->
        <%- include('partials/sidebar') %>

        <div class="container">
            <div class="header">
                <h2>Issued Book Records</h2>
                <div class="search-box">
                    <input type="text" placeholder="🔍 Search" />
                </div>
            </div>

            <table>
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Book ID</th>
                        <th>Issued By</th>
                        <th>Issue Date</th>
                        <th>Return Date</th>
                        <th>Status</th>
                        <th>Update</th>
                    </tr>
                </thead>
                <tbody id="tbody">
                    <% if (data.length === 0) { %>
                        <tr>
                            <td colspan="8">No data available</td>
                        </tr>
                    <% } else { data.forEach((item, index) => { %>
                        <tr>
                            <td data-label="ID"><%= index + 1 %></td>
                            <td data-label="Book ID"><%= item.title %></td>
                            <td data-label="Issued By"><%= item.name %></td>
                            <td data-label="Issue Date"><%= item.issue_date.toLocaleDateString() %></td>
                            <td data-label="Return Date"><%= item.return_date.toLocaleDateString() %></td>
                            <td data-label="Status">
                                <span class="status <%= item.status === 'returned' ? 'returned' : 'active' %>">
                                    <%= item.status %>
                                </span>
                            </td>
                            <!-- <td data-label="Delete">
                                <div class="button-group">
                                    <a class="btn btn-delete" href="/deleteIssued?id=<%= item.id %>">Delete</a>
                                </div>
                            </td> -->
                            <td data-label="Update">
                                <div class="button-group">
                                    <a class="btn btn-update" href="/updateIssued?id=<%= item.id %>">Update</a>
                                </div>
                            </td>
                        </tr>
                    <% }) } %>
                </tbody>
            </table>
        </div>
    </div>

    <script src="/dashboard.js"></script>
</body>

</html>
